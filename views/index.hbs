<h1>Mentor Matching</h1>
<table>
    <caption>Available mentors</caption>
    <thead>
        <tr>
            <th class="person-name">Name</th>
            <th class="person-email">Email</th>
            <th class="person-bio">Bio</th>
            <th class="person-specialties">Specialties</th>
        </tr>
    </thead>
    <tbody>
        {{#each mentors}}
            <tr>
                <td class="person-name">{{name}}</td>
                <td class="person-email"><a href="mailto:{{email}}">{{email}}</a></td>
                <td class="person-bio">{{bio}}</td>
                <td class="person-specialties">{{specialties}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

<form method="POST" action="/">
    <h2>Join our program!</h2>
    <label for="person-name">Name</label>
    <input name="person-name" id="person-name" />
    <label for="person-email">Email</label>
    <input name="person-email" id="person-email" />
    <label for="person-bio">Bio</label>
    <textarea name="person-bio" id="person-bio"></textarea>
    <label for="person-specialties">Specialties (comma-separated, eg. "JavaScript, Ruby, Python...")</label>
    <input name="person-specialties" id="person-specialties" />
    <input type="submit" value="Sign Up" />
</form>
